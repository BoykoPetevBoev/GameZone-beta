{{> header}}
<div class="form">
  <div class="tab-content">

    <ul class="tab-group">
      <li class="tab"><a href="#/register">Register</a></li>
      <li class="tab active"><a href="#/login">Login</a></li>
    </ul>

    <div id="login">
      <h1>Welcome Back!</h1>

      <form action="#/login" method="POST">

        <div class="field-wrap">
          <input class="loginRequired" id="loginEmail" type="text" name="email"  autocomplete="off" placeholder="Email" />
        </div>

        <div class="field-wrap">
          <input class="loginRequired" id="loginPassword" type="password" name="password"  autocomplete="off"  placeholder="Password"/>
        </div>

        <button type="submit" class="button button-block" >LOGIN</button>

      </form>
    </div>


  </div><!-- tab-content -->
</div> <!-- /form -->
