{{> header}}
{{> userInfo}}

<div div class="mainContainer pageWidth center">
    <div class="center">
        <form id="addProduct" action="#/changeProductInfo" method="POST">
            <div class="form-group">
                <input type="hidden" class="form-control" name="_id" value={{info._id}}>
            </div>
            <div class="form-group">
                <label for="productType">Category:</label>
                <select class="form-control" name="category">
                    <option value="Mouse">Mouse</option>
                    <option value="Keyboard">Keyboard</option>
                    <option value="Headset">Headset</option>
                    <option value="Mousepad">Mousepad</option>
                    <option value="Accessoaries">Accessoaries</option>
                </select>
            </div>

            <div class="form-group">
                <label>Brand Name</label>
                <input type="text" class="form-control" name="brand" value={{info.brand}}>
            </div>
            <div class="form-group ">
                <label>Model Name</label>
                <input type="text" class="form-control" name="model" value={{info.model}}>
            </div>
            <div class="form-group">
                <label>Price</label>
                <input type="text" class="form-control" name="price" value={{info.price}}>
            </div>
            <div class="form-group ">
                <label>Image</label>
                <input type="text" class="form-control" name="image" value={{info.image}}>
            </div>

            <button type="submit" class="btn" name="id" value="{{info_id}}">Submit</button>
            {{!-- <button class="btn">Reset</button> --}}
        </form>
    </div>

</div>
